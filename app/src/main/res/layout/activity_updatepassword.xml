<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorF7F7F7"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/titlebackgourndColor"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updatepassword_return"
            style="@style/button_return_style"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/update_password_title"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/ytext18"/>
    </RelativeLayout>
    <!-- 标题栏以下的控件 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y120"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/border_rectangle_b4b7b8_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_register_pwd"/>

            <EditText
                android:id="@+id/update_password_oldpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/update_password_himt_old"
                android:imeOptions="normal"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/x20"
                android:singleLine="true"
                android:textColor="@color/colorbfbfbf"
                android:textColorHint="@color/itemBorderColor"
                android:textSize="@dimen/ytext14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/border_rectangle_b4b7b8_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_register_pwd"/>

            <EditText
                android:id="@+id/update_password_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/update_password_himt_pwd"
                android:imeOptions="normal"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/x20"
                android:singleLine="true"
                android:textColor="@color/colorbfbfbf"
                android:textColorHint="@color/itemBorderColor"
                android:textSize="@dimen/ytext14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/border_rectangle_b4b7b8_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x30">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_register_pwd"/>

            <EditText
                android:id="@+id/update_password_pwdagain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/register_pwdagain"
                android:imeOptions="normal"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/x20"
                android:singleLine="true"
                android:textColor="@color/colorbfbfbf"
                android:textColorHint="@color/itemBorderColor"
                android:textSize="@dimen/ytext14"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/updatepassword_updatepdw_showpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:button="@drawable/chekboxd_register"
            android:checked="false"
            android:text="显示密码"
            android:textColor="@color/color4e4e4e"

            android:textSize="@dimen/ytext13"/>

        <Button
            android:id="@+id/update_password_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/border_cccccc_shape"
            android:stateListAnimator="@null"
            android:text="@string/register_ok"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/ytext16"/>
    </LinearLayout>
</LinearLayout>
