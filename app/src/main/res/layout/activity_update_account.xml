<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF7F7F7"
    android:clickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/titlebackgourndColor"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update_account_return"
            style="@style/button_return_style"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_account_title"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/ytext18" />
    </RelativeLayout>
    <!-- 标题栏以下的控件 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorF7F7F7"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20">

        <RelativeLayout
            android:id="@+id/update_account_iconlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/update_account_icon"
                android:textColor="@color/color4e4e4e"
                android:textSize="@dimen/ytext15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <com.lancheng.jneng.view.CircleImageView
                    android:id="@+id/update_account_icon"
                    android:layout_width="@dimen/y100"
                    android:layout_height="@dimen/y100"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y10"
                    android:scaleType="centerCrop"
                    app:border_color="#7fffffff"
                    app:border_width="4dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/icon_home_arrow_graw" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/itemBorderColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/update_account_name"
                android:textColor="@color/color4e4e4e"
                android:textSize="@dimen/ytext15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x20">

                <TextView
                    android:id="@+id/update_account_et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/color6e6e6e"
                    android:textSize="@dimen/ytext14" />

                <!--  <EditText
                      android:id="@+id/update_account_et_name"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:background="@null"
                      android:gravity="right"
                      android:imeOptions="actionNext"
                      android:inputType="text"
                      android:paddingLeft="@dimen/x20"
                      android:singleLine="true"
                      android:textColor="@color/color6e6e6e"
                      android:textColorHint="@color/itemBorderColor"
                      android:textSize="@dimen/ytext14" />
                      -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/icon_home_arrow_graw" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/itemBorderColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/update_account_sex"
                android:textColor="@color/color4e4e4e"
                android:textSize="@dimen/ytext15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update_account_et_sex"
                    android:layout_width="@dimen/x120"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:maxLength="11"
                    android:paddingRight="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/color6e6e6e"
                    android:textSize="@dimen/ytext14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/icon_home_arrow_graw" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/itemBorderColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/update_account_mail"
                android:textColor="@color/color4e4e4e"
                android:textSize="@dimen/ytext15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x20">

                <EditText
                    android:id="@+id/update_account_et_mail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/color6e6e6e"
                    android:textColorHint="@color/itemBorderColor"
                    android:textSize="@dimen/ytext14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/icon_home_arrow_graw" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/itemBorderColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/update_account_qq"
                android:textColor="@color/color4e4e4e"
                android:textSize="@dimen/ytext15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x20">

                <EditText
                    android:id="@+id/update_account_et_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/color6e6e6e"
                    android:textColorHint="@color/itemBorderColor"
                    android:textSize="@dimen/ytext14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/icon_home_arrow_graw" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/itemBorderColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/update_account_signature"
                android:textColor="@color/color4e4e4e"
                android:textSize="@dimen/ytext15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x20">

                <EditText
                    android:id="@+id/update_account_et_signature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:paddingLeft="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/color6e6e6e"
                    android:textColorHint="@color/itemBorderColor"
                    android:textSize="@dimen/ytext14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@mipmap/icon_home_arrow_graw" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/y40"
            android:background="@color/itemBorderColor" />
    </LinearLayout>

    <Button
        android:id="@+id/update_account_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/y40"
        android:background="@drawable/border_6c4b4a_shape"
        android:clickable="false"
        android:text="@string/register_ok"
        android:stateListAnimator="@null"
        android:textSize="@dimen/ytext16"
        android:textColor="@color/titleColor" />
</LinearLayout>
