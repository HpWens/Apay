<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:aflf="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!-- 标题栏以下的控件 -->
    <LinearLayout
        android:id="@+id/item_inverstmentlist_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x30"
        android:paddingTop="@dimen/x30">


        <TextView
            android:id="@+id/item_inverstment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/x20"
            android:text="[担]宽窄巷子奶茶店"
            android:textColor="@color/color4e4e4e"
            android:textSize="@dimen/ytext16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x20">

            <com.lancheng.jneng.view.RoundProgressBar
                android:id="@+id/item_inverstment_roundprogressbar"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_margin="10dp"
                aflf:roundColor="#617B8B"
                aflf:roundProgressColor="#FF0029"
                aflf:roundWidth="15dp"
                aflf:textColor="#FF0029"
                aflf:textIsDisplayable="true"
                aflf:textSize="@dimen/ytext17"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x80">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="投资总额"
                            android:textColor="@color/color6e6e6e"
                            android:textSize="@dimen/ytext13"/>

                        <TextView
                            android:id="@+id/item_inverstment_money"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="￥5000,00,00"
                            android:textColor="@color/color4e4e4e"
                            android:textSize="@dimen/ytext13"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="年利率"
                            android:textColor="@color/color6e6e6e"
                            android:textSize="@dimen/ytext13"/>

                        <TextView
                            android:id="@+id/item_inverstment_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="70%"
                            android:textColor="@color/color4e4e4e"
                            android:textSize="@dimen/ytext13"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/x80">

                    <LinearLayout
                        android:id="@+id/layout_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="期限"
                            android:textColor="@color/color6e6e6e"
                            android:textSize="@dimen/ytext13"/>

                        <TextView
                            android:id="@+id/item_inverstment_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="5个月"
                            android:textColor="@color/color4e4e4e"
                            android:textSize="@dimen/ytext13"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x50"
                        android:layout_toRightOf="@id/layout_data"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="奖励"
                            android:textColor="@color/color6e6e6e"
                            android:textSize="@dimen/ytext13"/>

                        <TextView
                            android:id="@+id/item_inverstment_award"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="70%"
                            android:textColor="@color/color4e4e4e"
                            android:textSize="@dimen/ytext13"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_inverstment_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/border_for_gray_shape"
                        android:paddingBottom="@dimen/y8"
                        android:paddingLeft="@dimen/x20"
                        android:paddingRight="@dimen/x20"
                        android:paddingTop="@dimen/y8"
                        android:text="投股中"
                        android:textColor="@color/color617b8b"
                        android:textSize="@dimen/ytext13"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_inverstmentlist_views"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/itemBorderColor"
        android:visibility="gone"/>
</LinearLayout>

