<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_community_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y30"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/y25">

        <TextView
            android:id="@+id/item_community_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题1"
            android:textColor="@color/color4e4e4e"
            android:textSize="@dimen/ytext15"/>

        <TextView
            android:id="@+id/item_community_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/x5"
            android:maxLines="3"
            android:paddingTop="@dimen/y10"
            android:text="标题1"
            android:textColor="@color/color6e6e6e"
            android:textSize="@dimen/ytext13"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/itemBorderColor"/>
</LinearLayout>



